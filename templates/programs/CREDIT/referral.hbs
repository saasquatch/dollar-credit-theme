<td>
  {{#if referral.imageUrl}}
    <img class="img-circle squatch-referrals-avatar" src="{{referral.imageUrl}}">
  {{else}}
    <img class="img-circle squatch-referrals-avatar" src="{{gravatar referral.email default="mm" rating="pg" size=40 secure=isSecureUrl}}">
  {{/if}}

  <div class="squatch-referrals-heading">{{referral.firstName}}</div>

  <div class="squatch-referrals-description">
    <span class="hidden-sm">
      {{#if description}}
        {{description}}
      {{else}}
        {{#if paid}}
          Paid User
        {{else}}
          Trial User
        {{/if}}
      {{/if}}
    </span>

    <span class="hidden-md
      {{#if cancelled}}
        text-red
      {{else}}
        {{#if paid}}
          text-green
        {{else}}
          text-yellow
        {{/if}}
      {{/if}}
    ">
      {{#if cancelled}}
        Credit Removed
      {{else}}
        {{#if paid}}
          ${{math programDetails.referredRewardDetails.credit ' / 100'}} Free Credit
        {{else}}
          ${{math programDetails.referredRewardDetails.credit ' / 100'}} Pending
        {{/if}}
      {{/if}}
    </span>
  </div>
</td>

<td class="hidden-sm">
  <div class="squatch-referrals-heading">
    {{#if heading}}
      {{heading}}
    {{else}}
      {{#if paid}}
        Signed Up
      {{else}}
        Referred
      {{/if}}
    {{/if}}
  </div>

  <div class="squatch-referrals-description" data-moment="true">{{dateReferred}}</div>
</td>
<td>
  <i class="icon squatch-referrals-icon
    {{#if cancelled}}
      icon-cancel-circled text-red
    {{else}}
      {{#if paid}}
        icon-ok-circled text-green
      {{else}}
        icon-attention text-yellow
      {{/if}}
    {{/if}}
  "></i>

  <div class="squatch-referrals-heading hidden-sm">
    {{#if cancelled}}
      Referral Reward
    {{else}}
      {{#if paid}}
        ${{math programDetails.referredRewardDetails.credit ' / 100'}}
      {{else}}
        Trial Signup
      {{/if}}
    {{/if}}
  </div>

  <div class="squatch-referrals-description hidden-sm
    {{#if cancelled}}
      text-red
    {{else}}
      {{#if paid}}
        text-green
      {{else}}
        text-yellow
      {{/if}}
    {{/if}}
  ">
    {{#if cancelled}}
      Removed
    {{else}}
      {{#if paid}}
        Free Credit
      {{else}}
        Credit Pending
      {{/if}}
    {{/if}}
  </div>
</td>
